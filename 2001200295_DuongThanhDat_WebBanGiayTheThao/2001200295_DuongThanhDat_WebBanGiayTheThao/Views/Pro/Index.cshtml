@model List<_2001200295_DuongThanhDat_WebBanGiayTheThao.Models.Product>
@{
    ViewBag.Title = "Pro";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Products</h2>
<div class="row row-cols-1 row-cols-md-5 g-4">
    @foreach(var item in Model)
    {
        <div class="col">
            <div class="card">
                <img src="~/Image/@item.ImageUrl" class="card-img-top" alt="@item.Name" />
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Price</p>
                    <p class="card-text"><small class="text-muted">Category: @item.Category.Name</small></p>
                </div>
            </div>
        </div>
    }
</div> 

