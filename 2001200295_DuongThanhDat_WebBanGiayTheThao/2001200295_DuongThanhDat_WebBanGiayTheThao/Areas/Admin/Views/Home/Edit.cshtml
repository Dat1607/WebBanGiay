@model _2001200295_DuongThanhDat_WebBanGiayTheThao.Models.Product
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage1.cshtml";
}

<h2>Edit</h2>

<form action="/admin/home/edit/@Model.Id" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="row">
        <div class="col-md-6">
            <label for="Name">Name</label>
            <input type="text" class="form-control" id="Name" name="Name" placeholder="Name" value="@Model.Name" />
        </div>
        <div class="col-md-6">
            <label for="Price">Price</label>
            <input type="number" class="form-control" id="Price" name="Price" placeholder="Price" value="@Model.Price" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <label for="Description">Description</label>
            <input type="text" class="form-control" id="Description" name="Description" placeholder="Description" value="@Model.Description" />
        </div>
        <div class="col-md-6">
            <label for="CatId">Category ID</label>
            <input type="number" class="form-control" id="CatId" name="CatId" placeholder="CatId" value="@Model.CatId" />
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <label for="ImageUrl">ImageUrl</label>
            <input type="file" class="form-control" id="ImageUrl" name="ImageUrl" placeholder="ImageUrl" value="@Model.ImageUrl" />
        </div>
    </div>
    <button type="submit" class="btn btn-outline-primary">Save</button>
    <a href="/admin/product/index" class="btn btn-outline-danger">Cancel</a>
</form>
