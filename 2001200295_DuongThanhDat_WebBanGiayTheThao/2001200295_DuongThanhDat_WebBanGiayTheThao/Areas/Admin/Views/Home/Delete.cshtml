@model _2001200295_DuongThanhDat_WebBanGiayTheThao.Models.Product
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage1.cshtml";
}

<h2>Delete</h2>

<form action="/admin/home/delete/@Model.Id" method="post">
    <input type="hidden" name="MAXE" value="@Model.Id" />
    <table class="table">
        <tr>
            <td><img src="~/Image/@Model.ImageUrl" style="height:300px;width:300px;" alt="@Model.Name" /></td>
        </tr>
        <tr>
            <th>Name</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>@Model.Price</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>@Model.Description</td>
        </tr>
        <tr>
            <th>Category ID</th>
            <td>@Model.CatId</td>
        </tr>
    </table>
    <button type="submit" class="btn btn-outline-danger">Delete</button>
</form>